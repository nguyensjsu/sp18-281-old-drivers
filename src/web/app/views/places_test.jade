html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        meta(name='description', content='')
        meta(name='author', content='')
        link(rel='icon', href='../../favicon.ico')
        title Tour Guide for Spartans
        // Bootstrap core CSS
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css', integrity='sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ', crossorigin='anonymous')
        // jQuery ui CSS
        link(rel='stylesheet', href='//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css')

        script(src='https://code.jquery.com/jquery-1.12.4.js')
        script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.js')
        script(src='https://use.fontawesome.com/f9b22d3044.js')

        // Custom CSS
        link(href='stylesheets/places_test.css', rel='stylesheet')

        script(type='text/javascript').
            $(document).ready(function () {
                $('#media').carousel({
                    pause: true,
                    interval: false,
                });
            });
        // Autocomplete funciton

    body
        nav.navbar.navbar-toggleable-md.navbar-light.fixed-top.bg-faded
            button.navbar-toggler.navbar-toggler-right(type='button', data-toggle='collapse', data-target='#navbarCollapse', aria-controls='navbarCollapse', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            a.navbar-brand(href='#')
                img.img-fluid(src='images/qIXtA.png', height='30px', width='30px')
            #navbarCollapse.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item.active
                        a.nav-link(href='/') Home
                    li.nav-item.active
                        a.nav-link(href='/product') Product
                    li.nav-item
                        a.nav-link(href='/about') About
                    li.nav-item
                        a.nav-link(href='/contact') Contact
                form.form-inline.mt-2.mt-md-0
                    .ui-widget
                        input#tags.form-control.mr-sm-2(type='text', placeholder='Search')
                        button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
                ul.navbar-nav.justify-content-end
                    li.nav-item
                        if user
                            a.nav-link(href='/home') Hello, #{}!
                        else
                            a.nav-link(href='/login') Join Us


        .container-fluid
            .row
                .col-1
                .col-10
                    h2 #{inventory.InventoryName}
                    hr


            .row.justify-content-center
                .col-5
                    h4 Price
                    p $ #{inventory.InventoryPrice}

                    hr

                    
                    h4 Inventory
                    <!--
                    i.fa.fa-external-link(aria-hidden='true')
                    a(href='#{items.website}') Website
                    br
                    i.fa.fa-phone(aria-hidden='true') -->
                    |   #{inventory.Amount}

                    hr

                    button(onclick='#{newOrder}') Buy
                    
                    <!--
                    h4 Nearby Places
                    for scene in items.scenes
                        i.fa.fa-external-link(aria-hidden='true')
                        a(href='#{scene.url}') #{scene.name}
                        br
                    -->

                .col-5#pics
                    iframe(width='100%', height='450px', frameborder='0', style='border:0', 
                    src='https://static1.squarespace.com/static/580fef93414fb5635ebb4c10/5a61310464b05fc422c84c62/5a8b4a4274b76c546716ff78/1519077962347/')


                <!--
                .col-5#map
                    iframe(width='100%', height='450px', frameborder='0', style='border:0', src='https://www.google.com/maps/embed/v1/place?key=AIzaSyD24HTaCZNl759ZbQduQKfitIi2hOCAULw&q=#{items.name}', allowfullscreen)
                -->

        hr

        <!--
        .container#slide
            .map.map-1(style="background-image:url('#{items.images[0]}')")
            .map.map-2(style="background-image:url('#{items.images[1]}')")
            .map.map-3(style="background-image:url('#{items.images[2]}')")


        hr
        -->

        .row.justify-content-center
            .col-md-8.comments

                if user
                    .comment-wrap
                        .photo
                            .avatar(style="background-image: url('https://s3.amazonaws.com/uifaces/faces/twitter/dancounsell/128.jpg')")
                        .comment-block
                            form(action='/insert' method='post')
                                input(name='place', value='', type='hidden')
                                textarea(name='content', id='textarea1' cols='30', rows='3', placeholder='Add review...')
                                button.btn.icon-btn.btn-primary(type='submit')
                                    i.fa.fa-share-square-o(aria-hidden='true')
                                    span.img-circle.text-info
                                    | Share

                else


                .float-right

                // for review in items.reviews
                    .comment-wrap
                        .photo
                            img.avatar(style="background-image: url('https://s3.amazonaws.com/uifaces/faces/twitter/dancounsell/128.jpg')")
                        .comment-block
                            p.comment-text #{review.Content}
                            .bottom-comment
                                .comment-date #{review.Date}
                            
        hr

        // Footer
        footer.footer.text-center
            .container
                ul.list-inline.mb-5
                    li.list-inline-item
                        a.social-link.rounded-circle.text-white.mr-3(href='https://www.facebook.com/TourGuide-132179940786791/')
                            i.fa.fa-facebook(aria-hidden='true')
                    li.list-inline-item
                        a.social-link.rounded-circle.text-white.mr-3(href='https://twitter.com/TourGuide_280')
                            i.fa.fa-twitter(aria-hidden='true')
                    li.list-inline-item
                        a.social-link.rounded-circle.text-white(href='https://www.github.com')
                            i.fa.fa-github(aria-hidden='true')
                p.text-muted.small.mb-0 Copyright Â© Team 404



