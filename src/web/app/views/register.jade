extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Registration Details
					div.signup-wall
						form(class='form-signin', action='/signup', method='POST')
							input(type='text', name='name', class='form-control', placeholder='Name',required, autofocus)
							input(type='text', name='phone', class='form-control nomargin', placeholder='Phone', required)
							input(type='text', name='balance', class='form-control', placeholder='Balance',required)
							button(class='btn btn-lg btn-primary btn-block', type='submit') Register
							span.clearfix
					#message
						if message
							h1.text-center.error-message #{message}